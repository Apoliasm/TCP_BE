// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ListingStatus {
  ON_SALE
  RESERVED
  SOLD
  DELETED
}

model User {
  id        Int      @id @default(autoincrement())
  userId    String   @unique // 로그인용 아이디(문자열)
  nickname  String   @unique
  password  String   // 해시 저장 권장
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listings  Listing[]

  @@index([createdAt])
}

model Listing {
  id        Int          @id @default(autoincrement())
  userId    Int
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  title     String
  memo      String?      // DC식 몇 줄 본문
  status    ListingStatus @default(ON_SALE)

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  images    ListingImage[]
  items     Item[]

  @@index([userId, createdAt])
  @@index([status, createdAt])
}

model ListingImage {
  id        Int      @id @default(autoincrement())
  listingId Int?
  listing   Listing?  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  url       String
  order     Int      @default(0) // 대표=0, 그 다음 1,2...
  createdAt DateTime @default(now())

  items     Item[]   // 이 이미지에 매핑된 아이템들

  @@unique([listingId, order])
  @@index([listingId])
}

model Item {
  id             Int          @id @default(autoincrement())
  listingId      Int
  listing        Listing      @relation(fields: [listingId], references: [id], onDelete: Cascade)

  listingImageId Int?
  listingImage   ListingImage? @relation(fields: [listingImageId], references: [id], onDelete: SetNull)

  name           String
  pricePerUnit   Int    // 아이템 개별 가격(선택)
  unit           Int
  detailText     String?      // 상태/설명 텍스트(선택)
  quantity       Int          @default(1)

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([listingId])
  @@index([listingImageId])
}
