generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  userId    String    @unique
  nickname  String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  listings  Listing[]

  @@index([createdAt])
}

model Listing {
  id        Int            @id @default(autoincrement())
  userId    Int
  title     String
  memo      String?
  status    ListingStatus  @default(ON_SALE)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  Item      ListingItem[]
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  images    ListingImage[]

  @@index([status, createdAt])
  @@index([userId, createdAt])
}

model ListingImage {
  id        Int      @id @default(autoincrement())
  listingId Int?
  url       String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  Item      ListingItem[]
  listing   Listing? @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([listingId, order])
  @@index([listingId])
}

model ListingItem {
  id             Int           @id @default(autoincrement())
  listingId      Int
  listingImageId Int?
  name           String
  pricePerUnit   Int
  unit           Int
  detailText     String?
  quantity       Int           @default(1)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime
  Listing        Listing       @relation(fields: [listingId], references: [id], onDelete: Cascade)
  ListingImage   ListingImage? @relation(fields: [listingImageId], references: [id])

  @@index([listingId])
  @@index([listingImageId])
}


enum ListingStatus {
  ON_SALE
  RESERVED
  SOLD
  DELETED
}
